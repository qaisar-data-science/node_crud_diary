<html>
 <head>
  <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Montserrat", sans-serif;
}
   body {
            background-color: #f5f5f5;
            display: flex;
            padding: 20px;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            position: relative;
        }
        .card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
            border-radius: 10px;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .card-text {
            color: #777;
            margin-bottom: 20px;
        }
        .price {
            color: #626cd6;
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .rating {
            color: #ffc107;
            margin-bottom: 20px;
        }
        .btn-add-to-cart {
            width: 100%;
            border-radius: 10px 10px 10px 10px;
            color: #fff;
            font-weight: bold;
            padding: 10px;
        }
        .btn-green {
            background-color: #626cd6;
        }
        .btn-orange {
            background-color: #626cd6;
        }
        .btn-yellow {
            background-color: #626cd6;
        }
        .decorative-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
        .decorative-shapes .shape {
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: transparent;
            border: 2px solid;
            border-radius: 50%;
        }
        .shape-1 {
            top: 10%;
            left: 10%;
            border-color: #626cd6;
        }
        .shape-2 {
            top: 50%;
            left: 50%;
            border-color: #626cd6;
        }
        .shape-3 {
            top: 80%;
            left: 80%;
            border-color: #626cd6;
        }
  </style>
 </head>
 <body>
<div class="container">
    <img src="banner.jpg" alt="Banner" height="450" class="w-100 rounded">
    <h3 class="text-center mt-4">Products Page</h3>
   <div class="row justify-content-center">
    <% product.forEach(item => { %>
    <div class="col-md-4 col-sm-6 col-12">
     <div class="card">
      <img alt="Image" height="200" src="<%= item.productImage %>"/>
      <div class="card-body text-center">
       <h5 class="card-title">
        <%= item.productName %>
       </h5>
       <p class="card-text">
        <%= item.productDesc %>       
        </p>
       <p class="price">
        <%= item.productPrice %>
       </p>
       <div class="rating">
        <i class="fas fa-star">
        </i>
        <i class="fas fa-star">
        </i>
        <i class="fas fa-star">
        </i>
        <i class="fas fa-star-half-alt">
        </i>
        <i class="far fa-star">
        </i>
       </div>
      </div>
      <button class="btn btn-add-to-cart btn-green">
       ADD TO CART
      </button>
     </div>
    </div>
    <% }); %>
   </div>
  </div>
  <script src="index.js"></script>
 </body>
</html>
